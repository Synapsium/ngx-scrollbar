{
    "compileOnSave": false,
    "angularCompilerOptions": {
        "annotateForClosureCompiler": false
    },
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2017",
        "module": "es2020",
        "lib": [
        "es2020",
        "dom"
        ],
        "useDefineForClassFields": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "ngx-scrollbar/*": [
                "dist/@synapsium/ngx-scrollbar/*"
            ],
            "ngx-scrollbar": [
                "dist/@synapsium/ngx-scrollbar"
            ],
            "ngx-scrollbar-dev/*": [
                "src/lib/*"
            ],
            "ngx-scrollbar-dev": [
                "src/lib"
            ]
        }
    }
}